<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:orientation="vertical"
    tools:context=".stBalka.StBalkaActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/shema1TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Балка на двух опорах с распределенной нагрузкой"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            />

        <ImageButton
            android:id="@+id/shema1Button"
            android:onClick="shema1ButtonOnClick"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            app:srcCompat="@drawable/st_balka_schema1" />

        <TextView
            android:id="@+id/shema2TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Балка на двух опорах с сосредоточенной нагрузкой посередине"
            android:gravity="center_horizontal"
            android:textSize="15sp"/>

        <ImageButton
            android:id="@+id/shema2Button"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            app:srcCompat="@drawable/st_balka_schema2"
            android:gravity="center_horizontal"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/shema3TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Консольная балка с распределенной нагрузкой"
            android:gravity="center_horizontal"
            android:textSize="15sp"/>

        <ImageButton
            android:id="@+id/shema3Button"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            app:srcCompat="@drawable/st_balka_schema3" />

        <TextView
            android:id="@+id/shema4TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Консольная балка с сосредоточенной нагрузкой на конце"
            android:gravity="center_horizontal"
            android:textSize="15sp"/>

        <ImageButton
            android:id="@+id/shema4Button"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            app:srcCompat="@drawable/st_balka_schema4" />




    </LinearLayout>

</ScrollView>